<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/header_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">

            <com.mxi.buildsterapp.widget.MyTextviewLight
                android:id="@+id/tv_w_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:gravity="center|left"
                android:textSize="18sp"
                android:paddingLeft="15dp"
                android:textColor="@color/black"/>

            <com.mxi.buildsterapp.widget.MyTextviewLight
                android:id="@+id/tv_w_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:gravity="center|left"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:tint="@color/color_blue"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_click">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_blue"/>

    </LinearLayout>


</RelativeLayout>
