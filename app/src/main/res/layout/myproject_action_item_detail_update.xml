<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_above="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:tint="@color/color_blue" />

                <com.mxi.buildsterapp.widget.MyTextviewBold
                    android:id="@+id/tv_screen_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_title"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_blue" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|top"
                        android:paddingTop="15dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_profile_pic"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/student"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/color_blue"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.mxi.buildsterapp.widget.MyTextviewBold
                                android:id="@+id/tv_assigned_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assigned To :"
                                android:textColor="@color/black"
                                android:paddingTop="8dp"/>

                            <com.mxi.buildsterapp.widget.MyTextviewBold
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="June 16 2018"
                                android:textColor="@color/black"
                                android:paddingTop="5dp"/>

                            <com.mxi.buildsterapp.widget.MyTextviewBold
                                android:id="@+id/tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location :"
                                android:textColor="@color/black"
                                android:paddingTop="5dp"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|top"
                        android:paddingTop="15dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_pic"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/student"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/color_blue"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.mxi.buildsterapp.widget.MyTextviewBold
                                android:id="@+id/tv_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assigned To :"
                                android:textColor="@color/black"
                                android:paddingTop="5dp"/>



                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp">

                    <com.mxi.buildsterapp.widget.MyTextviewBold
                        android:id="@+id/tv_last_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_blue"
                        android:paddingTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/ln_complete_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_action_complete"
                            android:layout_marginTop="10dp" />

                        <com.mxi.buildsterapp.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete"
                            android:textColor="@color/color_blue"
                            android:paddingTop="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_reject_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_action_reject"
                            android:layout_marginTop="10dp" />

                        <com.mxi.buildsterapp.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reject"
                            android:textColor="@color/color_blue"
                            android:paddingTop="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_delete_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_action_delete"
                            android:layout_marginTop="10dp"/>

                        <com.mxi.buildsterapp.widget.MyTextviewLight
                            android:id="@+id/tv_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:textColor="@color/color_blue"
                            android:paddingTop="2dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_reassign_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:id="@+id/iv_reassign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reassign"
                            android:layout_marginTop="10dp"/>

                        <com.mxi.buildsterapp.widget.MyTextviewLight
                            android:id="@+id/tv_reassign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Re-Assign"
                            android:textColor="@color/color_blue"
                            android:paddingTop="2dp" />


                    </LinearLayout>


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="17dp"
                    app:cardElevation="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="340dp">


                        <WebView
                            android:id="@+id/home_web"
                            android:layout_width="fill_parent"
                            android:layout_height="340dp"
                            android:visibility="visible"/>

                        <ProgressBar
                            android:id="@+id/pb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:id="@+id/iv_no_network"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/no_network"
                            android:padding="30dp"
                            android:tint="@color/colorAccent"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/fl_screen_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>



                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_issue_images"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:id="@+id/ln_no_issue_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone">

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Images Found"
                                android:textColor="@color/color_blue" />


                        </LinearLayout>


                    </FrameLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mxi.buildsterapp.widget.MyTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments :"
                        android:textColor="@color/color_blue"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp" />


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_comment_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:padding="50dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_no_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="invisible">

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Comment Found"
                                android:textColor="@color/color_blue" />


                        </LinearLayout>


                    </FrameLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_border"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center">

                        <com.mxi.buildsterapp.widget.MyEditText
                            android:id="@+id/ed_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/write_comment"
                            android:singleLine="true"
                            android:textColorHint="@color/color_blue"
                            android:textColor="@color/color_blue"
                            android:textSize="15sp"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_post_comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chat_send"
                    android:tint="@color/color_blue" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
