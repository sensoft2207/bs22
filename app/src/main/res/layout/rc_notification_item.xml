<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_project_images"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/student"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/color_blue"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp">

                <com.mxi.buildsterapp.widget.MyTextviewBold
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Screen 1"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left">

                    <com.mxi.buildsterapp.widget.MyTextviewLight
                        android:id="@+id/tv_floor_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="floor_title"
                        android:gravity="right"
                        android:textColor="@color/black"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/ln_message_read"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/red_circle"
                                android:orientation="vertical"
                                android:visibility="gone">

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_viewed_task"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/red_circle"
                                android:orientation="vertical"
                                android:visibility="gone">

                            </LinearLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/ln_accepted_task"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_task_completed"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginLeft="10dp">

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ln_approvall_thumb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_waiting"
                                    android:layout_marginLeft="10dp">

                                </LinearLayout>
                                <com.mxi.buildsterapp.widget.MyTextviewLight
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waiting for approval"
                                    android:gravity="right"
                                    android:textColor="#008000"
                                    android:paddingLeft="5dp"/>


                            </LinearLayout>

                        </FrameLayout>


                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left">

                    <com.mxi.buildsterapp.widget.MyTextviewLight
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="location"
                        android:gravity="right"
                        android:textColor="@color/grey"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    android:paddingRight="9dp">

                    <com.mxi.buildsterapp.widget.MyTextviewLight
                        android:id="@+id/tv_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark taylor"
                        android:layout_gravity="right"
                        android:textColor="@color/grey"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingTop="5dp">

                <com.mxi.buildsterapp.widget.MyTextviewLight
                    android:id="@+id/tv_def_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem"
                    android:textColor="@color/black"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_click"
        android:paddingTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

    </LinearLayout>


</RelativeLayout>
