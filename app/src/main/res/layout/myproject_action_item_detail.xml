<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_above="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:tint="@color/color_blue" />

                <com.mxi.buildsterapp.widget.MyTextviewBold
                    android:id="@+id/tv_screen_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_title"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_blue" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    app:cardElevation="5dp">

                    <FrameLayout
                        android:id="@+id/fl_screen_image"
                        android:layout_width="match_parent"
                        android:layout_height="170dp">

                        <ImageView
                            android:id="@+id/iv_screen_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progress_screen_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:padding="50dp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:background="#B3006CA6"
                                android:gravity="center">

                                <com.mxi.buildsterapp.widget.MyTextviewBold
                                    android:id="@+id/tv_sent_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/color_white" />

                            </LinearLayout>

                        </RelativeLayout>

                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardElevation="5dp"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="3dp">

                            <FrameLayout
                                android:id="@+id/fl_task_slider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/vp_slider"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                    </android.support.v4.view.ViewPager>

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_previous"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="25dp"
                                    android:background="@drawable/back_next_prev"
                                    android:elevation="25dp"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_back"
                                    android:tint="@color/color_white" />

                                <ImageView
                                    android:id="@+id/iv_next"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical|right"
                                    android:layout_marginRight="25dp"
                                    android:background="@drawable/back_next_prev"
                                    android:elevation="25dp"
                                    android:padding="8dp"
                                    android:rotation="180"
                                    android:src="@drawable/ic_back"
                                    android:tint="@color/color_white" />

                            </FrameLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center|top"
                        android:paddingTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ln_delete_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_action_delete" />

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:textColor="@color/color_blue"
                                android:paddingTop="2dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_complete_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_action_complete"
                                android:layout_marginTop="10dp" />

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete"
                                android:textColor="@color/color_blue"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_reject_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_action_reject"
                                android:layout_marginTop="10dp" />

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reject"
                                android:textColor="@color/color_blue"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mxi.buildsterapp.widget.MyTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments :"
                        android:textColor="@color/color_blue"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp" />


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_comment_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:padding="50dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_no_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="invisible">

                            <com.mxi.buildsterapp.widget.MyTextviewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Comment Found"
                                android:textColor="@color/color_blue" />


                        </LinearLayout>


                    </FrameLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_border"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center">

                        <com.mxi.buildsterapp.widget.MyEditText
                            android:id="@+id/ed_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/write_comment"
                            android:singleLine="true"
                            android:textColorHint="@color/color_blue"
                            android:textColor="@color/color_blue"
                            android:textSize="15sp"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_post_comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chat_send"
                    android:tint="@color/color_blue" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
